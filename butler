(((or ((glob "_build")
       (glob "*#")
       (glob "*.swp")
       (glob "*~")))
  ignore)

 ((or ((glob "{lib,bin}/*.ml{,i}")
       (glob "{lib,bin}/jbuild")))
  (run (make)))

 ((or ((glob "{lib,bin}/*.ml{,i}")
       (glob "{lib,bin}/jbuild")
       (glob "test/*.ml{,i}")
       (glob "test/jbuild")))
  (timeout (5 (make check)))))
